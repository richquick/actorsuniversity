<%= form_for([:admin, @group]) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "problem") %> <%= t("stopped_this_being_saved") %></h2>

      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :public %>
    <%= f.check_box :public %>
  </div>
  <div class="actions">
    <%= f.button t("save") , :class => "add" %>
  </div>
<% end %>
