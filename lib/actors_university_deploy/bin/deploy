#!/usr/bin/env ruby
require 'actors_university_deploy'

def deploy_target
  unless %w(health staging).include? ARGV[0]
    puts "Usage: ./bin/deploy health|staging [directory=../actors_university]"
    exit(-1)
  end
end

def directory
  return ARGV[1] if ARGV[1] == ''

  '../actors_university'
end

Deploy.new(deploy_target, directory).go


